{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "$lib": [
        "web/lib"
      ],
      "$lib/*": [
        "web/lib/*"
      ],
      "$components/*": [
        "web/lib/components/*"
      ],
      "$scripts/*": [
        "scripts/*"
      ]
    }
  },
  "include": [
    "scripts/**/*.ts",
    "web/**/*.ts",
    "web/**/*.svelte",
    "rollup.config.js",
    ".eslintrc.cjs"
  ],
  "exclude": [
    "node_modules"
  ]
}
